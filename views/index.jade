extends layout

block content
    script.
        window.fbAsyncInit = function() {
            FB.init({
                appId       : '1560227167547402',
                xfbml       : true,
                version     : 'v2.1'
            });
        };
        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

    h1= title
    p Welcome to #{title}

    div#login
        h2 Click here to login to Facebook
        button#loginButton Login to Facebook

    div#getLikes
        h2 Click this button to see your likes
        button#likesButton See likes

    div#getTvShows
        h2 Click this button to see your favourite TV shows
        button#tvButton See TV Shows

    script(src="https://code.jquery.com/jquery-2.1.3.min.js")
    script(src="/javascripts/global.js")

    script.
        $(document).ready(function() {
            $('#loginButton').on('click', facebookLogin);
            $('#likesButton').on('click', listLikes);
            $('#tvButton').on('click', {category : 'Tv show'}, searchCategories);
        });